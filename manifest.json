{
    "name": "Espruino Code Loader",
    "version": "0.1",
    "manifest_version": 2,

    "description": "Auto load code for Espruino Web IDE",
    "icons": {
        "128": "images/icon.png",
        "48": "images/icon.png",
        "16": "images/icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.espruino.com/ide/"
            ],
            "js": [
                "js/loader.js"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "storage",
        "clipboardWrite",
        "<all_urls>"
    ],
    "web_accessible_resources": [
    ],
    "browser_action": {
        "default_icon" : "images/icon.png",
        "default_title" : "Espruino Code Loader"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdnjs.cloudflare.com/; object-src 'self'",
    "options_page": "options.html"
}
