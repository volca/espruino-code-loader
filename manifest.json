{
    "name": "Espruino Code Loader",
    "version": "0.1",
    "manifest_version": 2,

    "description": "Auto load code for Espruino Web IDE",
    "icons": {
        "128": "images/icon.png",
        "48": "images/icon.png",
        "16": "images/icon.png"
    },
    "background": {
        "matches": [
            "https://www.espruino.com/ide/"
        ],
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default_icon" : "images/icon.png",
        "default_title" : "Espruino Code Loader"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdnjs.cloudflare.com/; object-src 'self'",
    "options_page": "options.html"
}
